"""Example environment configuration."""

# Server Configuration
HOST=0.0.0.0
PORT=8081
LOG_LEVEL=INFO
ENVIRONMENT=development

# MQTT Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_TOPIC=devices/+/telemetry
MQTT_QOS=1
MQTT_KEEPALIVE=60

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=energy-platform
INFLUXDB_BUCKET=telemetry
INFLUXDB_TIMEOUT=5000

# Device Service
DEVICE_SERVICE_URL=http://localhost:8080
DEVICE_SERVICE_TIMEOUT=5.0
DEVICE_SERVICE_MAX_RETRIES=3

# Rule Engine
RULE_ENGINE_URL=http://localhost:8082
RULE_ENGINE_TIMEOUT=5.0
RULE_ENGINE_MAX_RETRIES=3
RULE_ENGINE_RETRY_DELAY=1.0

# DLQ Configuration
DLQ_ENABLED=true
DLQ_DIRECTORY=./dlq
DLQ_MAX_FILE_SIZE=10485760
DLQ_MAX_FILES=10

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# API
API_PREFIX=/api/data
